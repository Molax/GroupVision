<script>

    setTimeout(function () {

        if (localStorage.getItem('logado') == null) {
            $.snackbar("add", {
                type: "success",
                msg: "Logado com sucesso",
                buttonText: "Fechar",
            });
            localStorage.setItem('logado', true)
        }
    }, 1000);


    $('#mini').click(function () {
        window.location.replace("Certificado");
    });
</script>
